<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/inputs.css" />
    <link rel="stylesheet" href="/css/admin-crear.css" />
  </head>

  <body>
    <h1 class="admin-title">Editar Producto</h1>
    <form
      class="form-crear"
      method="POST"
      action="/admin/<%= product.id %>/actualizar?_method=PUT"
    >
      <div class="propiedades">
        <input
          type="text"
          id="name"
          name="name"
          class="input-form"
          placeholder="Ejemplo"
          value="<%= product.name %>"
          maxlength="25"
          required
        />
        <label for="name" class="labels">Nombre del producto:</label>
      </div>

      <div class="propiedades">
        <textarea id="description" name="description" class="input-form">
<%= product.description %></textarea
        >
        <label for="description" class="labels">Descripción:</label>
      </div>

      <div class="propiedades">
        <input
          type="text"
          id="stock"
          name="stock"
          class="input-form"
          placeholder="Ejemplo"
          value="<%= product.stock%>"
          required
        />
        <label for="stock" class="labels">Stock:</label>
      </div>

      <div class="propiedades">
        <input
          type="file"
          id="image"
          placeholder="seleccionar imagen"
          name="image"
          class="input-form"
          value="<%= product.image%>"
        />
        <!-- <label for="image" class="labels">Imagen:</label> -->
      </div>

      <div class="propiedades">
        <input
          type="text"
          id="category"
          name="category"
          class="input-form"
          placeholder="Ejemplo"
          value="<%= product.category%>"
          required
        />
        <label for="category" class="labels">Categoría:</label>
      </div>

      <div class="propiedades">
        <input
          type="text"
          id="colors"
          name="colors"
          class="input-form"
          placeholder="Ejemplo"
          value="<%= product.colors%>"
        />
        <label for="colors" class="labels">Colores:</label>
      </div>

      <div class="propiedades">
        <input
          type="number"
          id="price"
          name="price"
          step="0.01"
          class="input-form"
          placeholder="Ejemplo"
          value="<%= product.price%>"
          required
        />
        <label for="price" class="labels">Precio:</label>
      </div>

      <input type="submit" value="Guardar cambios" />
    </form>
  </body>
</html>
