<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('../partials/head') %>
  <link rel="stylesheet" href="/css/inputs.css" />
  <link rel="stylesheet" href="/css/admin.css" />
  <link rel="stylesheet" href="/css/admin-crear.css" />
</head>

<body>
  <h1 class="admin-title">Crear Producto</h1>

  <form id="form-product" class="form-crear" method="POST" action="/admin" enctype="multipart/form-data">
    <div class="propiedades">
      <input type="text" id="name" name="name" class="input-form" placeholder="Ejemplo" required />
      <label for="name" class="labels">Nombre del producto:</label>
    </div>

    <div class="propiedades">
      <textarea id="description" name="description" class="input-form" placeholder="Ejemplo" required></textarea>
      <label for="description" class="labels">Descripción:</label>
    </div>

    <div class="propiedades">
      <input type="file" id="image" placeholder="seleccionar imagen" name="image" class="input-form" />
      <label for="image" class="labels">Imagen:</label>
    </div>

    <div class="propiedades">
      <input type="text" id="category" name="category" class="input-form" placeholder="Ejemplo" required />
      <label for="category" class="labels">Categoría:</label>
    </div>

    <!-- <div class="propiedades">
      <input type="text" id="colors" name="colors" class="input-form" placeholder="Ejemplo" />
      <label for="colors" class="labels">Colores:</label>
    </div> -->

    <div class="propiedades">
      <input type="number" id="price" name="price" step="1" class="input-form" placeholder="Ejemplo" required />
      <label for="price" class="labels">Precio:</label>
    </div>

    <ul id="item-list"></ul>

    <div id="buttons">
      <input type="submit" value="Crear" class="button-form" id="crear-product" />
    </div>

  </form>

  <div class="fixed-div add-item-div" id="toggle-button">
    <a>Agregar un item</a>
  </div>

  <!-- item part of the form -->
  <div id="overlay">
    <div id="centered-box">
      <div id="form-item" class="form-crear">
        <div class="propiedades">
          <input type="file" id="image-item" placeholder="seleccionar imagen" name="image-item" class="input-form" />
          <label for="image-item" class="labels">Imagen:</label>
        </div>

        <div class="propiedades">
          <input type="text" id="color" name="color" class="input-form" placeholder="Naranja" required />
          <label for="color" class="labels">Color</label>
        </div>

        <div class="propiedades">
          <input type="number" id="stock" name="stock" step="1" class="input-form" placeholder="4" required />
          <label for="stock" class="labels">Stock</label>
        </div>

        <div id="buttons">
          <div class="button-form" id="add-item-button"> Agregar </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/script/admin-crear.js"></script>

</body>

</html>